<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_bg"
    android:paddingBottom="30dp">

    <View
        android:id="@+id/view2"
        android:layout_width="70dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_gray_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ImageSelectDialogAlbum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/ImageSelectDialogCamera"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/album_image" />

    <ImageView
        android:id="@+id/ImageSelectDialogCamera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ImageSelectDialogAlbum"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera_image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectAlbum"
        android:textColor="@color/textBlack"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/ImageSelectDialogAlbum"
        app:layout_constraintStart_toStartOf="@+id/ImageSelectDialogAlbum"
        app:layout_constraintTop_toBottomOf="@+id/ImageSelectDialogAlbum" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/takePicture"
        android:textColor="@color/textBlack"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/ImageSelectDialogCamera"
        app:layout_constraintStart_toStartOf="@+id/ImageSelectDialogCamera"
        app:layout_constraintTop_toBottomOf="@+id/ImageSelectDialogCamera" />
</androidx.constraintlayout.widget.ConstraintLayout>